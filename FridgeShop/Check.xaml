        <Label x:Name="label_Copy" Content="Чек №:" HorizontalAlignment="Left" Margin="20,36,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Label" HorizontalAlignment="Left" Margin="81,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.308" Width="164"/>
        <Label x:Name="label3" Content="Чек сформирован!" HorizontalAlignment="Left" Margin="20,86,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
